<script>
  $(function() {

    YARNTALE.slides = [
      <% @tale.slides.each do |slide| %>
      {
        image: {original: "<%= slide.image.url %>",
                thumb: "<%= slide.image.url(:thumb) %>",
                medium: "<%= slide.image.url(:medium) %>"},
        audio: "<%= slide.audio.url %>",
        caption: "<%= slide.caption %>"
      },
      <% end %>
    ]


    YARNTALE.attach_to(".yarntale").setSlideIndex(0)

  })
</script>


<div style="width: 980px;margin:0 auto;">

  <div class="yarntale" style="margin:0 auto;">

    <div class="sensor top left">
      <div class="nav prev"><i class="fa fa-chevron-left" aria-hidden="true"></i></div>
    </div>

    <div class="sensor top right">
      <div class="nav next"><i class="fa fa-chevron-right" aria-hidden="true"></i></div>
    </div>

    <div class="sensor bottom">
      <div class="caption"></div>
      <div class="timeline">
        <div class="control">
          <div class="pause"><i class="fa fa-pause" aria-hidden="true"></i></div>
          <div class="play"><i class="fa fa-play" aria-hidden="true"></i></div>
        </div>
        <div class="slides"></div>
      </div>
    </div>

    <img class="cur_slide">
    <audio class="audio"></audio>
  </div>

</div>