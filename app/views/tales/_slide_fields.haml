.nested-fields.well.padding.slide{data: {slide_id: f.object.id}, style: "padding:10px"}
  .row
    - if Rails.env.development?
      %div{style:"position:absolute;right:0px;"}
        = f.object.id
    = f.hidden_field :id
    = f.hidden_field :position

    .col-sm-1
      %i.sort-handle.cursor-move.color-gray.fa.fa-sort.fa-2x{"aria-hidden" => "true", title: "drag to reorder"}
      = link_to_remove_association "<i class='fa fa-2x fa-remove color-red margin-top-sm'></i>".html_safe, f, data: { confirmation: "Delete slide?"}

    .col-sm-7{style:"margin-left:0"}
      = render "slide_media", f: f

    .col-sm-4
      = f.input :caption, input_html: { style: "vertical-align:top;width:90%;", rows: 10}

  .row
    .col-sm-offset-1.col-sm-11
      = f.input :mute_background_audio, label: "mute tale audio", label_html: { title: "mute tale audio during this slide" }
