= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/1.3.2/wavesurfer.min.js"
= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/1.2.3/plugin/wavesurfer.regions.min.js"

#waveform

:javascript
  $(function() {
    window.wavesurfer = WaveSurfer.create({
      container: "#waveform",
      waveColor: "gray",
      barWidth: 2,
      progressColor: "black"
    })


    wavesurfer.load("#{@slide.audio.url}")
  })
